{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": ["config:recommended"],
  "timezone": "Asia/Tokyo",
  "dependencyDashboard": false,
  "ignoreTests": true,
  "lockFileMaintenance": {
    "enabled": true,
    "extends": ["schedule:daily"]
  },
  "automerge": false,
  "automergeSchedule": ["every 1 hour after 00:00 and before 23:59 every day"],
  "major": {
    "enabled": true
  },
  "automergeStrategy": "squash",
  "minimumReleaseAge": "21 days",
  "nix": {
    "enabled": true
  },
  "packageRules": [
    {
      "matchPackageNames": ["pnpm"],
      "minimumReleaseAge": "0 days"
    },
    {
      "matchFileNames": ["**/mise.toml"],
      "matchPackageNames": ["@openai/codex", "opencode-ai"],
      "minimumReleaseAge": "0 days",
      "groupName": "immediate updates",
      "groupSlug": "immediate-updates"
    },
    {
      "matchFileNames": ["**/.claude-version"],
      "matchPackageNames": ["@anthropic-ai/claude-code"],
      "minimumReleaseAge": "0 days",
      "groupName": "immediate updates",
      "groupSlug": "immediate-updates"
    },
    {
      "matchFileNames": ["**/mise.toml"],
      "matchManagers": ["mise"],
      "matchDatasources": ["npm"],
      "excludePackageNames": ["@openai/codex", "opencode-ai"],
      "groupName": "mise npm packages",
      "groupSlug": "mise-npm",
      "schedule": ["every weekend"]
    }
  ],
  "customManagers": [
    {
      "customType": "regex",
      "fileMatch": ["\\.claude-version$"],
      "matchStrings": ["(?<currentValue>\\d+\\.\\d+\\.\\d+)"],
      "depNameTemplate": "@anthropic-ai/claude-code",
      "datasourceTemplate": "npm",
      "versioningTemplate": "npm"
    },
    {
      "customType": "regex",
      "fileMatch": ["\\.default-python-packages$"],
      "matchStrings": ["(?<depName>\\S+)==(?<currentValue>\\S+)"],
      "datasourceTemplate": "pypi",
      "versioningTemplate": "pep440"
    }
  ]
}
