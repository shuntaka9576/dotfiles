{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "timezone": "Asia/Tokyo",
  "dependencyDashboard": true,
  "ignoreTests": true,
  "lockFileMaintenance": {
    "enabled": true,
    "extends": [
      "schedule:daily"
    ]
  },
  "automerge": true,
  "automergeSchedule": [
    "every 1 hour after 00:00 and before 23:59 every day"
  ],
  "major": {
    "enabled": false
  },
  "automergeStrategy": "squash",
  "nix": {
    "enabled": true
  },
  "enabledManagers": [
    "npm",
    "nix",
    "mise",
    "regex"
  ],
  "customManagers": [
    {
      "customType": "regex",
      "description": "Update npm packages in .default-npm-packages",
      "fileMatch": [
        "(^|/)home-manager/programs/mise/\\.default-npm-packages$",
        "(^|/)\\.default-npm-packages$"
      ],
      "matchStrings": [
        "^(?<depName>@?[\\w-]+(?:@[\\w-]+)?[\\w.-]*)(?:@(?<currentValue>[\\w.-]+))?$"
      ],
      "matchStringsStrategy": "any",
      "datasourceTemplate": "npm",
      "versioningTemplate": "npm"
    }
  ],
  "packageRules": [
    {
      "description": "Automerge npm packages in .default-npm-packages",
      "matchManagers": ["regex"],
      "matchFileNames": ["**/.default-npm-packages"],
      "automerge": true
    }
  ]
}
