{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "timezone": "Asia/Tokyo",
  "dependencyDashboard": true,
  "ignoreTests": true,
  "lockFileMaintenance": {
    "enabled": true,
    "extends": [
      "schedule:daily"
    ]
  },
  "automerge": true,
  "automergeSchedule": [
    "every 1 hour after 00:00 and before 23:59 every day"
  ],
  "major": {
    "enabled": false
  },
  "automergeStrategy": "squash",
  "nix": {
    "enabled": true
  },
  "customManagers": [
    {
      "customType": "regex",
      "managerFilePatterns": [
        "^\\.default-npm-packages$"
      ],
      "matchStrings": [
        "^(?<depName>@?[^@]+)@(?<currentValue>.+)$"
      ],
      "datasourceTemplate": "npm"
    }
  ]
}
