{
  "env": {
    "MAX_THINKING_TOKENS": "31999"
  },
  "includeCoAuthoredBy": false,
  "permissions": {
    "allow": ["WebFetch", "Bash"],
    "defaultMode": "acceptEdits"
  },
  "hooks": {
    "PostToolUse": [
      {
        "matcher": "Write|Edit|MultiEdit",
        "hooks": [
          {
            "type": "command",
            "command": "/Users/shuntaka/dotfiles/home-manager/programs/claude/hooks/format.ts >> ~/.config/claude/debug/format.log"
          }
        ]
      }
    ],
    "Stop": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "~/dotfiles/home-manager/programs/claude/hooks/notify.ts"
          }
        ]
      }
    ]
  },
  "model": "opus"
}
