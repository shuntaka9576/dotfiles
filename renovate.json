{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": ["config:recommended"],
  "timezone": "Asia/Tokyo",
  "dependencyDashboard": false,
  "ignoreTests": true,
  "lockFileMaintenance": {
    "enabled": true,
    "extends": ["schedule:daily"]
  },
  "automerge": false,
  "automergeSchedule": ["every 1 hour after 00:00 and before 23:59 every day"],
  "major": {
    "enabled": true
  },
  "automergeStrategy": "squash",
  "minimumReleaseAge": "21 days",
  "nix": {
    "enabled": true
  },
  "packageRules": [
    {
      "matchPackageNames": ["pnpm"],
      "minimumReleaseAge": "0 days"
    },
    {
      "matchFileNames": ["**/global-packages"],
      "matchPackageNames": ["@openai/codex", "@anthropic-ai/claude-code", "opencode-ai"],
      "minimumReleaseAge": "0 days",
      "groupName": "immediate updates",
      "groupSlug": "immediate-updates"
    },
    {
      "matchFileNames": ["**/global-packages"],
      "excludePackageNames": ["@openai/codex", "@anthropic-ai/claude-code", "opencode-ai"],
      "groupName": "global-packages dependencies",
      "groupSlug": "global-packages",
      "schedule": ["every weekend"]
    }
  ],
  "customManagers": [
    {
      "customType": "regex",
      "fileMatch": ["global-packages"],
      "matchStrings": ["(?<depName>\\S+?)@(?<currentValue>\\S+)"],
      "datasourceTemplate": "npm",
      "versioningTemplate": "npm"
    }
  ]
}
